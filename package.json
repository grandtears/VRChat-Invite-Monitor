{
  "name": "vrc-invite-monitor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx server/index.ts",
    "build": "tsc && vite build && esbuild server/index.ts --bundle --platform=node --target=node20 --outfile=dist-server/index.js",
    "package": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "hono": "^4.6.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.vrc.invite.monitor",
    "productName": "VRC Invite Monitor",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "dist-server/**/*",
      "electron/preload.cjs"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "asarUnpack": [
      "dist-server/**/*"
    ]
  }
}